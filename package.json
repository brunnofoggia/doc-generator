{
    "name": "doc-generator",
    "version": "0.3.0",
    "description": "",
    "license": "ISC",
    "author": "Bruno Foggia",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "husky:install": "husky install",
        "exec:kms": "cross-env IS_TS_NODE=true ts-node -r tsconfig-paths/register test/kms",
        "prebuild": "rimraf lib",
        "build": "tsc -p ./tsconfig.build.json",
        "lint": "eslint \"{src,apps,libs}/**/*.+(js|json|ts|tsx)\" --fix",
        "pre-commit": "lint-staged",
        "prepare": "npm run build",
        "test": "npm run test:docker:up && npm run test:run",
        "test:run": "NODE_OPTIONS=--experimental-vm-modules npx jest --verbose --detectOpenHandles",
        "test:docker:up": "docker compose up -d",
        "test:docker:down": "docker compose down"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.4.4",
        "@faker-js/faker": "^8.0.2",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.5",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "axios": "^1.4.0",
        "commitlint": "^17.5.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.39.0",
        "git-commit-msg-linter": "^4.11.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.1.2",
        "pg": "^8.11.3",
        "rimraf": "^4.2.0",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^3.14.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@types/lodash": "^4.14.191",
        "cloud-solutions": "github:brunnofoggia/cloud-solutions",
        "ejs": "^3.1.9",
        "lodash": "^4.17.21",
        "node-common": "github:brunnofoggia/node-common",
        "puppeteer": "^21.1.1",
        "typeorm": "^0.3.17",
        "uuid": "^9.0.0"
    },
    "files": [
        "/lib"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}